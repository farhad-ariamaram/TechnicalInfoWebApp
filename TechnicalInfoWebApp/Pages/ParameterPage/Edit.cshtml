@page
@model TechnicalInfoWebApp.Pages.ParameterPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<h4>پارامتر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblParameter.FldParametersId" />
            <div class="form-group">
                <label asp-for="TblParameter.FldPhysicalQuantityId" class="control-label">کمیت فیزیکی</label>
                <select asp-for="TblParameter.FldPhysicalQuantityId" class="form-control" asp-items="ViewBag.FldPhysicalQuantityId"></select>
                <span asp-validation-for="TblParameter.FldPhysicalQuantityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblParameter.FldParametersText" class="control-label">پارامتر</label>
                <input asp-for="TblParameter.FldParametersText" class="form-control" />
                <span asp-validation-for="TblParameter.FldParametersText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">واحد</label>
                @Html.ListBoxFor(x => x.parametersUnitsVM.SelectedIds, Model.parametersUnitsVM.Items,
               new { @class = "form-control", multiple = "multiple", id = "parametersUnits-dropdown" })
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function () {
        $("#parametersUnits-dropdown").multiselect({
            enableFiltering: true,
            buttonWidth: '100%',
            buttonClass: 'btn btn-outline-secondary',
            nonSelectedText: 'موردی انتخاب نشده',
            filterPlaceholder: 'جستجو',
            allSelectedText: "همه موارد انتخاب شده",
            nSelectedText: "مورد انتخاب شده",
        });
    });
</script>
}
