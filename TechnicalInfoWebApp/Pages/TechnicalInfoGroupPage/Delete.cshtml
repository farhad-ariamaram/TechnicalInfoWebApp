@page
@model TechnicalInfoWebApp.Pages.TechnicalInfoGroupPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>گروه اطلاعات فنی</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            گروه اطلاعات فنی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblTechnicalInfoGroup.FldTechnicalInfoGroupTxt)
