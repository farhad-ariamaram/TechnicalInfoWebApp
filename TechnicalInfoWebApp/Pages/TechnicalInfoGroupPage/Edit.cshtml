@page
@model TechnicalInfoWebApp.Pages.TechnicalInfoGroupPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<h4>گروه اطلاعات فنی</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblTechnicalInfoGroup.FldTechnicalInfoGroupId" />
            <div class="form-group">
                <label asp-for="TblTechnicalInfoGroup.FldReferenceId" class="control-label">مرجع</label>
                <select asp-for="TblTechnicalInfoGroup.FldReferenceId" class="form-control" asp-items="ViewBag.FldReferenceId"></select>
                <span asp-validation-for="TblTechnicalInfoGroup.FldReferenceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblTechnicalInfoGroup.FldTechnicalInfoGroupTxt" class="control-label">گروه اطلاعات فنی</label>
                <input asp-for="TblTechnicalInfoGroup.FldTechnicalInfoGroupTxt" class="form-control" />
                <span asp-validation-for="TblTechnicalInfoGroup.FldTechnicalInfoGroupTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
