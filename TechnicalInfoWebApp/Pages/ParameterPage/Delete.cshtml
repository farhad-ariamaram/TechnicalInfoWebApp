@page
@model TechnicalInfoWebApp.Pages.ParameterPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>پارامتر</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            پارامتر
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblParameter.FldParametersText)
        </dd>
        <dt class="col-sm-2">
            کمیت فیزیکی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblParameter.FldPhysicalQuantity.FldPhysicalQuantityTxt)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TblParameter.FldParametersId" />
        <input type="submit" value="حذف" class="btn btn-danger ml-1 mr-1" />
        <a asp-page="./Index">انصراف</a>
    </form>
</div>
